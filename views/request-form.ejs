<% var input_cname = ''; var input_cemail = ''; var input_cphone = ''; var
input_cunit = ''; var input_cphoto = ''; var input_cdescription = ''; var
cnameError = ''; var cemailError = ''; var cphoneError = ''; var cunitError =
''; var cphotoError = ''; var cdescriptionError = ''; if(typeof(er) !=
'undefined') { for(var error of er) { switch(error.param){ case 'cname':
cnameError = error.msg; break; case 'cemail': cemailError = error.msg; break;
case 'cphone': cphoneError = error.msg; break; case 'cunit': cunitError =
error.msg; break; case 'cphoto': cphotoError = error.msg; break; case
'cdescription': cdescriptionError = error.msg; break; } } if(typeof(userData) !=
'undefined'){ input_cname = userData.cname; input_cemail = userData.cemail;
input_cphone = userData.cphone; input_cunit = userData.cunit; input_cphoto =
userData.cphoto; input_cdescription = userData.cdescription; }; } %>

<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/meta.ejs') %>
    <title>Request Form</title>
  </head>
  <body>
    <%- include('partials/nav.ejs') %>
    <main>
      <h2>TENANT WORK ORDER REQUEST</h2>
      <form action="process" method="POST" enctype="multipart/form-data">
        <div class="cwrapper">
          <label for="cname" class="required">Name</label>
          <input
            type="text"
            id="cname"
            name="cname"
            value="<%= input_cname %>"
          />
          <p class="error"><%= cnameError %></p>
        </div>
        <div class="cwrapper">
          <label for="cemail" class="required">Email</label>
          <input
            type="email"
            id="cemail"
            name="cemail"
            value="<%= input_cemail %>"
          />
          <p class="error"><%= cemailError %></p>
        </div>
        <div class="cwrapper">
          <label for="cphone" class="required">Phone</label>
          <input
            type="text"
            id="cphone"
            name="cphone"
            value="<%= input_cphone %>"
          />
          <p class="error"><%= cphoneError %></p>
        </div>
        <div class="cwrapper">
          <label for="cunit" class="required">Unit No.</label>
          <input
            type="text"
            id="cunit"
            name="cunit"
            value="<%= input_cunit %>"
          />
          <p class="error"><%= cunitError %></p>
        </div>
        <div class="cwrapper">
          <label for="cphoto">Photo</label>
          <input
            type="file"
            id="cphoto"
            name="cphoto"
            value="<%= input_cphoto %>"
          />
          <p class="error"><%= cphotoError %></p>
        </div>
        <div class="cwrapper">
          <label for="cdescription" id="cdescriptionLabel" class="required">
            Please describe the work or service required:
          </label>
          <input
            type="text"
            id="cdescription"
            name="cdescription"
            value="<%= input_cdescription %>"
          />
          <p class="error"><%= cdescriptionError %></p>
        </div>
        <div class="submission">
          <input type="submit" value="Send request" />
        </div>
      </form>
    </main>
    <%- include('partials/footer.ejs')%>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="js/tinymce/tinymce.min.js"></script>
    <script>
      tinymce.init({
        selector: "#cdescription",
      });
    </script>
  </body>
</html>
